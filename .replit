entrypoint = "index.js"
modules = ["nodejs-22"]
hidden = [".config", "package-lock.json"]

[gitHubImport]
requiredFiles = [".replit", "replit.nix", "package.json", "package-lock.json"]

[nix]
channel = "stable-24_11"

[deployment]
run = ["node", "index.js"]
deploymentTarget = "autoscale"
ignorePorts = false

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 9005
externalPort = 3001

[workflows]
runButton = "Run Main Server"

[[workflows.workflow]]
name = "Run Main Server"
author = 43588325
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node index.js"

[[workflows.workflow]]
name = "Debug Server"
author = 43588325
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node simple-debug-server.js"
